<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="404dp"
        android:layout_height="243dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="367dp"
            android:layout_height="130dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/logo" />

        <View
            android:layout_width="167dp"
            android:layout_height="4dp"
            android:layout_marginLeft="118dp"
            android:background="#FFFFFF" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/drodwn_btn" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/drodwn_btn" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:src="@drawable/profile2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <SearchView
                android:layout_width="277dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_btn"
                android:queryHint="@string/search_view_txt">

            </SearchView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="71dp"
                android:layout_height="41dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/cart" />

        </TableRow>


    </LinearLayout>

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="503dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableLayout
            android:layout_width="353dp"
            android:layout_height="247dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/view_shape">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="House to be rent in Malabe"
                    android:textAlignment="center"
                    android:textColor="#403C3C"
                    android:textSize="14sp" />
            </TableRow>


            <TableRow
                android:layout_width="267dp"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/house_96px"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Beds:4, Baths:4  Malabe | Rs 65000/month"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Now" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to basket" />
            </TableRow>


        </TableLayout>

        <TableLayout
            android:layout_width="353dp"
            android:layout_height="247dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/view_shape">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="House to be rent in Ja-Ela"
                    android:textAlignment="center"
                    android:textColor="#403C3C"
                    android:textSize="14sp" />
            </TableRow>


            <TableRow
                android:layout_width="267dp"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/house_96px"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Beds:3, Baths:1  Malabe | Rs 75000/month"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Now" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to basket" />
            </TableRow>


        </TableLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>